<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>
        This post is by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>
{{!-- Creates post.Comments object --}}
  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>
      {{!-- Sets frame for card-body with user comment and data --}}
      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add A New Comment Here!</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">- Comment -</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">- Submit -</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>